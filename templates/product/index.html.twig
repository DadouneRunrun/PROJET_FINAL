{% extends 'base.html.twig' %}

{% block title %}Nos produits - Goodies and Co{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <h3>Filtrer</h3>
            {{ form(form) }}
        </div>
        <div class="col-md-9">
            <h3>Nos Produits</h3>


            <div class="row">
                {% for product in products %}
                <div class="col-md-4">
                    <div class="product-item text-center">
                        <a href="{{ path('product', {'slug' : product.slug }) }}" class="href"><img
                                src="/Assets/ressources/img/uploads/products/{{ product.picture }}"
                                alt="{{ product.name }}" class="img-fluid"></a>
                        <h5>{{ product.name }}</h5>
                        <span class="product-description">{{ product.description }}</span>
                        <span class="product-price">{{ (product.price / 100)|number_format(2, ',' , '.') }}â‚¬</span>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>
</div>

{% endblock %}